<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="logintestsoftware.Login" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t= "sap.tnt" xmlns:l="sap.ui.layout">
	<Page title="blabla">
		<t:ToolHeader>
		<Button icon="sap-icon://home" type="Transparent" press="Home">
			<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow" />
			</layoutData>
		</Button>
		<ToolbarSpacer width="20px" />
		<Title text="Innovative Donation - Mitarbeiter" wrapping="false" class="title">
			<layoutData>
				<OverflowToolbarLayoutData priority="Disappear" />
			</layoutData>
		</Title>
		</t:ToolHeader>
		
		<l:VerticalLayout class="sapUiContentPadding"
					width="100%" enableScrolling="true">
					<l:content>

						<Input type="Text" placeholder="Benutzername" width="30%" />
						<Input type="Password" placeholder="Passwort" width="30%" />
						<Button text="Einloggen" press="login"/>
					</l:content>
				</l:VerticalLayout>
	</Page>
</core:View>